<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.flycast"
		name="Sega - Dreamcast/Naomi (Flycast)"
		version="0.1.0.49"
		provider-name="flyinghead">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.dreamcast" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Dreamcast</platforms>
		<extensions>chd|cdi|elf|cue|gdi|lst|bin|dat|zip|7z|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>true</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.flycast</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">Sega - Dreamcast/NAOMI (Flycast) 0.1</summary>
		<description lang="da_DK">Flycast er en fork af Reicast, en Sega Dreamcast-emulator til adskillige platforme.</description>
		<description lang="en_GB">Flycast is a fork of Reicast, a multi-platform Sega Dreamcast emulator.</description>
		<description lang="zh_CN">Flycast 是 Reicast 的一个分支，是一个多平台的世嘉 Dreamcast 模拟器。</description>
	</extension>
</addon>
